<%- include('./partials/header') %>

<div class="container">
    <div class="row"> 
        <h1 style="text-align:center;">Edit  <%= blacks.name %></h1>
        <div style="width:30% ; margin:0 auto">
            <form action="/blacks/<%= blacks._id %>?_method=PUT" method="post"> 
                <div class="form-group"> 
                    <input class="form-control" type="text" name="blacks[name]" value = "<%= blacks.name %>">   
                </div>
                <div class="form-group"> 
                    <input class="form-control" type="text" name="blacks[image]" value = "<%= blacks.image %>">
                      
                </div>

                <div class="form-group"> 
                    <input class="form-control" type="text" name="blacks[description]" value = "<%= blacks.description %>">
                      
                </div>
                <div class="form-group"> 
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>    
                </div>

            </form>
            
            <a href="/blacks">Go Back </a>

        </div>  
        
    </div>   
</div>


<%- include('./partials/footer') %>





