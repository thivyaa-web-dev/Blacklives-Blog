<%- include('./partials/header') %>

<div class="container"> 
    <div class="row"> 
        <div class="col-md-3"> 
            <p class="lead">Blog</p>
            <div class="list-group"> 
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        <div class="col-md-9"> 
            <div class="thumbnail">

                <img src="<%= black.image %>"> 
                <div class="caption-full"> 
                    <h4 class="pull-right">$9.00</h4>
                    <h4><a><%= black.name %></a></h4>
                    <p><%= black.description %></p>
                    


                    <% if(currentUser && black.author.id.equals(currentUser._id)){ %>
                    <a class = "btn btn-xs btn-warning" href="/blacks/<%= black._id %>/edit">Edit</a>
                    <form style="display:inline-block" action="/blacks/<%= black._id %>?_method=DELETE" method="POST">
                        <button class="btn btn-xs btn-danger">Delete</button>

                    </form>
                <% } %>
                </div>
            </div>
            <div class="well"> 
                <div class="text-right"> 
                    <a class = "btn btn-success" href="/blacks/<%= black._id %>/comments/new">Add New Comment</a>
                </div>
                <hr>
                <% black.comments.forEach(function(comment){ %> 
                    <div class="row"> 
                        <div class="col-md-12">
                            <strong><%= comment.author %></strong>  <%= comment.title %>     
                            <span class="pull-right">10 days ago</span>

                            <% if(currentUser && comment.author.id.equals(currentUser._id)){%>
                            <a class="btn btn-xs btn-warning" 
                               href = "/blacks/<%= black._id %>/comments/<%= comment._id %>/edit">Edit</a>

                               <form style="display:inline-block" action = "/blacks/<%= black._id %>/comments/<%= comment._id%>?_method=DELETE" method ="post"> 
                                <input type="submit" class="btn btn-xs btn-danger" value="Delete">
                            </form>

                             <% } %>                                
                        </div>    
                    </div> 
                <% }) %>
                  
            </div>
        </div>
    </div>   
</div>

<%- include('./partials/footer') %>