<%- include('./partials/header') %>

<div class="container">
    <div class="row"> 
        <h1 style="text-align:center;">Add a new comment to <%= black.name %></h1>
        <div style="width:30% ; margin:0 auto">
            <form action="/blacks/<%= black._id %>/comments" method="post"> 
                <div class="form-group"> 
                    <input class="form-control" type="text" name="comment[title]" placeholder="title">   
                </div>
                <div class="form-group"> 
                    <input class="form-control" type="text" name="comment[author]" placeholder="author">
                      
                </div>

                
                <div class="form-group"> 
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>    
                </div>

            </form>
            
            <a href="/blacks">Go Back </a>

        </div>  
        
    </div>   
</div>


<%- include('./partials/footer') %>
















